<%# 左側に来る 「User info」「New Book」を部分テンプレ化 %>
<%# 変数：user_name、user_introduction、book %>

<%# profile_imageは更新出来るようにすること %>

<div class="col-xs-3">
  <h2> User info </h2>
  <%# TODO: profile image更新出来るようにする %>
  <%= image_tag 'no_image.jpg', :class => 'attachment user profile_image fallback', size: '100x100' %>
  <table class="table">
    <tbody>
      <tr>
        <th> name </th>
        <th> <%= user_name %> </th>
      </tr>
      <tr>
        <th> introduction </th>
        <th> <%= user_introduction %> </th>
      </tr>
    </tbody>
  </table>
  <div class="row">
    <%= link_to '', edit_user_path, :class => 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
  </div>
  <h2> New book</h2>
  <%= form_for(book) do |f| %>
    <div class="field row">
      <%= f.label :title, 'Title' %>
      <%= f.text_field :title, :class => 'col-xs-12' %>
    </div>
    <div class="field row">
      <%= f.label :opinion, 'Opinion' %>
      <%= f.text_area :opinion, :class => 'col-xs-12' %>
    </div>
    <div class="actions row">
      <%= f.submit "Create Book", :class => 'btn btn-primary col-xs-12' %>
    </div>
  <% end %>
</div>
