<h2> User info </h2>
<%= form_for(@user) do |f| %>
  <div class="field">
    <%= f.label :name, 'Name' %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :user_image_id, 'Image' %>
    <%= attachment_image_tag @user, :profile_image, size: '100x100' %>
  </div>
  <div class="field">
    <%= f.label :user_introduction, 'Introduction' %>
    <%= f.text_field :user_introduction %>
  </div>
  <div class="action">
    <%= f.submit 'Update User' %>
  </div>
<% end %>
