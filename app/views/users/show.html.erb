<div class="row">

  <%= render 'users/list', user: @user, book: @new_book %>

  <div class="col-xs-9">
    <h2> Books </h2>
    <table class="table table-hover table-inverse">
      <thead>
        <tr>
          <th></th>
          <th> Title </th>
          <th> Opinion </th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @user.books.each do |book_info| %>
          <tr>
            <td> <%= attachment_image_tag @user, :profile_image, size: '40x40', fallback: 'no_image.jpg' %> </td>
            <td> <%= link_to book_info.title, book_path(book_info) %> </td>
            <td> <%= book_info.opinion %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
