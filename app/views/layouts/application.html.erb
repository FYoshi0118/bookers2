<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <header class="navbar navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
          <span class="nav-title"> Bookers </span>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to 'Home', '#', :class => 'glyphicon glyphicon-home' %>
              </li>
              <li>
                <%= link_to 'Users', '#', :class => 'glyphicon glyphicon-user' %>
              </li>
              <li>
                <%= link_to 'Books', '#', :class => 'glyphicon glyphicon-book' %>
              </li>
              <li>
                <%= link_to 'logout', destroy_user_session_path, :class => 'glyphicon glyphicon-log-out' %>
              </li>
            <% else %>
              <li style="color: white;">
                <%= link_to 'Home', '#', :class => 'glyphicon glyphicon-home' %>
              </li>
              <li>
                <%= link_to 'about', '#', :class => 'glyphicon glyphicon-link' %>
              </li>
              <li>
                <%= link_to 'sign up', new_user_registration_path, :class => 'glyphicon glyphicon-edit' %>
              </li>
              <li>
                <%= link_to 'login', new_user_session_path, :class => 'glyphicon glyphicon-log-in' %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>

    <%= yield %>

  </body>
</html>
