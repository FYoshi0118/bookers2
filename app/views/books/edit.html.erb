<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1> Editing Book</h1>
    <%= form_for(@book) do |f| %>
      <div class="field row">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, :class => 'col-xs-12' %>
      </div>
      <div class="field row">
        <%= f.label :opinion, 'Opinioon' %>
        <%= f.text_area :opinion, :class => 'col-xs-12' %>
      </div>
      <div class="actions row">
        <%= f.submit "Update Book", :class => 'btn btn-primary col-xs-12' %>
      </div>
    <% end %>
    <%= link_to 'Show |', book_path(@book.id) %>
    <%# TODO: Backのリンクは/booksにする %>
    <%= link_to 'Back', book_path(@book.id) %>
  </div>
</div>
