<div class="row">

  <div class="col-xs-3">
    <h2> User info </h2>
    <%# TODO: profile image入れる %>
    <table class="table">
      <tbody>
        <tr>
          <th> name </th>
          <th> <%= current_user.name %> </th>
        </tr>
        <tr>
          <th> introduction </th>
          <th></th>
        </tr>
      </tbody>
    </table>
    <div class="row">
      <%= link_to '', edit_user_path, :class => 'col-xs-12 btn btn-default glyphicon glyphicon-wrench' %>
    </div>
    <h2> New book</h2>
    <%= form_for(@new_book) do |f| %>
      <div class="field row">
        <%= f.label :title, 'Title' %>
        <%= f.text_field :title, :class => 'col-xs-12' %>
      </div>
      <div class="field row">
        <%= f.label :opinion, 'Opinion' %>
        <%= f.text_area :opinion, :class => 'col-xs-12' %>
      </div>
      <div class="actions row">
        <%= f.submit "Create Book", :class => 'btn btn-primary col-xs-12' %>
      </div>
    <% end %>
  </div>

  <div class="col-xs-9">
    <h2> Book detail </h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%# TODO: profile image更新出来るようにする %>
            <%= image_tag 'no_image_icon.jpg', :class => 'attachment user profile_image fallback', size: '40x40' %> <br>
            <%= current_user.name %>
          </td>
          <td>
            <%= link_to @book.title, book_path(@book.id) %>
          </td>
          <td>
            <%= @book.opinion %>
          </td>
          <td>
            <%= link_to 'Edit', edit_book_path(@book.id), :class => 'btn-sm btn-success' %>
          </td>
          <td>
            <%= link_to 'Destroy', book_path(@book.id), method: :delete, data: {confirm: '本当に削除しますか？'}, :class => 'btn-sm btn-danger' %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>

</div>
